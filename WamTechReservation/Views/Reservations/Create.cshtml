@model WamTechReservation.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<h2>Make Reservation</h2>
<hr />
<div class="row p-3 mb-2 bg-light text-dark">
    <div class="col-md-6">
        <form asp-action="Create" asp-area="Reservation" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label"></label>
                        <input asp-for="Surname" class="form-control" placeholder="Enter your surname" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Telephone" class="control-label"></label>
                <input asp-for="Telephone" class="form-control" placeholder="Enter your telephone number" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    <option value="">Select an option</option>
                    <option value="Manor House">Manor House</option>
                    <option value="Cottage">Cottage</option>
                    <option value="Camping">Camping</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control" placeholder="Enter start date" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control" placeholder="Enter end date"/>
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <center>
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" asp-controller="Reservations" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
